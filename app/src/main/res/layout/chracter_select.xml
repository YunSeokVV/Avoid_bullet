<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/u_zu3"
    >


    <Button
        android:id="@+id/왼쪽비행기로전환"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="11"
        android:text="←"
        android:textSize="35dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline3" />


    <Button
        android:id="@+id/선택"
        android:layout_width="160dp"
        android:layout_height="83dp"
        android:layout_gravity="center"

        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="선택"
        android:textSize="35dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintEnd_toStartOf="@+id/오른쪽비행기로전환"
        app:layout_constraintStart_toEndOf="@+id/왼쪽비행기로전환"
        app:layout_constraintTop_toTopOf="@+id/guideline3"
        app:layout_constraintVertical_bias="0.225" />


    <Button
        android:id="@+id/오른쪽비행기로전환"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="→"
        android:textSize="35dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline3" />


    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="346dp"
        android:layout_height="370dp"
        android:layout_marginBottom="76dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/전투기1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/galag2" />

        <ImageView
            android:id="@+id/전투기3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/air_craft1" />

        <ImageView
            android:id="@+id/전투기2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/air_craft3" />



    </FrameLayout>

    <TextView
        android:id="@+id/비행기를선택하세요"
        android:layout_width="313dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="비행기를 선택하세요"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.884" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="560dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="690dp" />
</android.support.constraint.ConstraintLayout>